<Options>:
    name: 'download_options'

    MDFloatLayout:

        MDBoxLayout:
            orientation: 'vertical'

            MDToolbar:
                title: 'Download Options'

            MDBoxLayout:
                orientation: 'vertical'

                MDBoxLayout:
                    adaptive_height: True
                    padding: 10
                    spacing: 10

                    AsyncImage:
                        id: image
                        size_hint: 0.4, None
                        height: 60

                    MDTextField:
                        multiline: True
                        id: title

                # Download options
                MDBoxLayout:

                    ScrollView:

                        MDBoxLayout:
                            id: option_layout
                            adaptive_height: True
                            orientation: 'vertical'
                            padding: 10
                            spacing: 10

            
        # Floating action button
        MDFloatingActionButton:
            icon: 'arrow-down'
            pos_hint: {'center_x': 0.95, 'center_y': 0.05}
            on_release: root.parent.download(title.text)



