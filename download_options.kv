MDScreen:
    name: 'download_options'

    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
        	padding: 10
        	spacing: 10

            FitImage:
                id: image
                size_hint: 0.4, None
                source: 'https://images.unsplash.com/photo-1622495727422-badb2c5a688b?ixid=MnwxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80'
                height: 60

            MDTextField:
                multiline: True
                id: title
                hint_text: 'Title'

        MDBoxLayout:
        	adaptive_height: True
            orientation: 'vertical'

			OptionListItem:

				Check:
					active: True

				MDLabel:
					text: '144p'
					bold: True

				MDLabel:
					text: 'MP4'
					bold: True

				MDLabel:
					text: '80.23MB'
					bold: True

			OptionListItem:

				Check:
					active: True

				MDLabel:
					text: '240p'
					bold: True

				MDLabel:
					text: 'MP4'
					bold: True

				MDLabel:
					text: '80.23MB'
					bold: True


<OptionListItem@MDBoxLayout>
	adaptive_height: True


<Check@MDCheckbox>:
	group: 'group'
	size_hint: None, None
	size: '48dp', '48dp'