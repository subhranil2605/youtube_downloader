<OptionListItem>:
    adaptive_height: True
    orientation: 'vertical'


    MDBoxLayout:
        adaptive_height: True

        Check:
            on_active: 
                root.parent.parent.parent.parent.parent.parent.parent.parent.itag = root.itag
                root.parent.parent.parent.parent.parent.parent.parent.parent.res = res.text

        MDLabel:
            id: res
            text: root.quality
            bold: True

        MDLabel:
            text: root.extension
            bold: True

        MDLabel:
            text: root.file_size
            bold: True

    MDSeparator:


<Check@MDCheckbox>:
	group: 'group'
	size_hint: None, None
	size: '48dp', '48dp'